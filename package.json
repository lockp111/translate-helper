{
  "name": "translate-helper",
  "displayName": "Translate Helper",
  "description": "智能翻译助手 - 基于大模型的划词翻译和变量命名建议",
  "version": "1.1.0",
  "publisher": "lockp111",
  "repository": {
    "type": "git",
    "url": "https://github.com/lockp111/translate-helper.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "translateHelper.translate",
        "title": "翻译选中文本",
        "category": "翻译助手",
        "icon": "$(globe)"
      },
      {
        "command": "translateHelper.naming",
        "title": "变量命名建议",
        "category": "翻译助手",
        "icon": "$(lightbulb)"
      },
      {
        "command": "translateHelper.replaceWithTranslation",
        "title": "用翻译结果替换",
        "category": "翻译助手"
      }
    ],
    "keybindings": [
      {
        "command": "translateHelper.translate",
        "key": "alt+t",
        "when": "editorHasSelection"
      },
      {
        "command": "translateHelper.naming",
        "key": "alt+n",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "translateHelper.translate",
          "group": "9_cutcopypaste@5",
          "when": "editorHasSelection"
        },
        {
          "command": "translateHelper.naming",
          "group": "9_cutcopypaste@6",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "翻译助手",
      "properties": {
        "translateHelper.enableQuickActions": {
          "type": "boolean",
          "default": true,
          "description": "在编辑器选中文本时显示快速操作菜单"
        },
        "translateHelper.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "claude",
            "zhipu",
            "deepseek",
            "siliconflow",
            "gemini",
            "kimi"
          ],
          "enumDescriptions": [
            "OpenAI",
            "Claude (Anthropic)",
            "智谱 GLM",
            "DeepSeek",
            "硅基流动",
            "Google Gemini",
            "Kimi (月之暗面)"
          ],
          "description": "选择 AI 服务提供商"
        },
        "translateHelper.targetLanguage": {
          "type": "string",
          "default": "zh",
          "enum": [
            "zh",
            "en",
            "ja",
            "ko",
            "fr",
            "de",
            "es",
            "ru"
          ],
          "description": "目标语言代码 (zh: 中文, en: 英文, ja: 日文, ko: 韩文, fr: 法文, de: 德文, es: 西班牙文, ru: 俄文)"
        },
        "translateHelper.namingCount": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5,
          "description": "变量命名建议数量"
        },
        "translateHelper.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "translateHelper.openaiBaseUrl": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Base URL (可选，用于代理或自定义端点)"
        },
        "translateHelper.openaiModel": {
          "type": "string",
          "default": "gpt-5-mini",
          "description": "OpenAI 模型名称"
        },
        "translateHelper.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "Claude (Anthropic) API Key"
        },
        "translateHelper.claudeModel": {
          "type": "string",
          "default": "claude-haiku-4-5-20251001",
          "description": "Claude 模型名称"
        },
        "translateHelper.claudeBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Claude API Base URL (可选，用于代理或自定义端点)"
        },
        "translateHelper.zhipuApiKey": {
          "type": "string",
          "default": "",
          "description": "智谱 API Key"
        },
        "translateHelper.zhipuModel": {
          "type": "string",
          "default": "glm-4.7-flash",
          "description": "智谱 GLM 模型名称"
        },
        "translateHelper.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Key"
        },
        "translateHelper.deepseekModel": {
          "type": "string",
          "default": "deepseek-v3.2",
          "description": "DeepSeek 模型名称"
        },
        "translateHelper.siliconflowApiKey": {
          "type": "string",
          "default": "",
          "description": "硅基流动 API Key"
        },
        "translateHelper.siliconflowModel": {
          "type": "string",
          "default": "Qwen/Qwen3-8B",
          "description": "硅基流动模型名称 (例如: Qwen/Qwen2.5-7B-Instruct, deepseek-ai/DeepSeek-V3)"
        },
        "translateHelper.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key"
        },
        "translateHelper.geminiModel": {
          "type": "string",
          "default": "gemini-3-flash-preview",
          "description": "Gemini 模型名称"
        },
        "translateHelper.kimiApiKey": {
          "type": "string",
          "default": "",
          "description": "Kimi (月之暗面) API Key"
        },
        "translateHelper.kimiModel": {
          "type": "string",
          "default": "kimi-k2-turbo-preview",
          "description": "Kimi 模型名称"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@google/genai": "^1.39.0",
    "openai": "^6.17.0"
  }
}